                }
                else
                {
                    <a asp-controller="Cart" asp-action="Remove" asp-route-id=@Model.Product.Id class="btn btn-secondary">Delete From Cart</a>
                }*@
        </div>
    </a>
</div>

<script src="~/js/cardProduct.js"></script>