@model ProductCartViewModel
@{
    string productImagePlaceholder = @"https://www.freeiconspng.com/thumbs/no-image-icon/no-image-icon-15.png";
}
<link rel="stylesheet" href="~/css/cardProduct.css" />
<div class="col-sm-3 mb-4">
    <a href="@Url.Action("Details", "Product", new { id = Model.Product.Id })" class="card-link" style="text-decoration: none; color: inherit;">
        <div class="card product-card" style=" height: 350px" onmouseover="zoomIn(this)" onmouseout="zoomOut(this)">
            <div class="product-card-img mt-4">
                <img src="@(Model.Product.ImagePath ?? productImagePlaceholder)" class="card-img-top" alt="...">
            </div>
            <div class="card-body">
                <p class="card-title" style="font-size: 12px;">@Model.Product.Name</p>
                <p class="card-title" style="font-size: 12px;">
                    @if (Model.StorageQuantity > 0)
                    {
                        <span style="color: green;">The product is available</span>
                    }
                    else
                    {
                        <span style="color: red;">The product is not available</span>
                    }

                </p>
            </div >
            <div class="card-body d-flex flex-column justify-content-end">

                <h5><span class="badge bg-primary d-flex  align-text-bottom">@string.Format("{0:N}",Model.Product.Price) ₴</span></h5>



            </div>

@*                @if (!Model.IsInCart)
                {
                    <a asp-controller="Cart" asp-action="Add" asp-route-id=@Model.Product.Id class="btn btn-danger">Add To Cart</a>
                }
                else
                {
                    <a asp-controller="Cart" asp-action="Remove" asp-route-id=@Model.Product.Id class="btn btn-secondary">Delete From Cart</a>
                }*@
        </div>
    </a>
</div>

<script src="~/js/cardProduct.js"></script>