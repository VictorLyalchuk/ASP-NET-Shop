@model ProductCartViewModel
@{
    string productImagePlaceholder = @"https://www.freeiconspng.com/thumbs/no-image-icon/no-image-icon-15.png";
}
<link rel="stylesheet" href="~/css/cardProduct.css" />
<div class="col-sm-3 mb-4">
    <a href="@Url.Action("Details", "Product", new { id = Model.Product.Id })" class="card-link" style="text-decoration: none; color: inherit;">
        <div class="card product-card" style=" height: 350px" onmouseover="zoomIn(this)" onmouseout="zoomOut(this)">
            <div class="product-card-img mt-4">
                <img src="@(Model.Product.ImagePath ?? productImagePlaceholder)" class="card-img-top" alt="...">
            </div>
            <div class="card-body">
                <p class="card-title">@Model.Product.Name</p>
            </div >
            <div class="card-body d-flex flex-column justify-content-end">

                <h5><span class="badge bg-primary d-flex  align-text-bottom">@Model.Product.Price ₴</span></h5>



            </div>

