@using BusinessLogic.DTOs;
@model CreateProductDTO

<div class="container">
    <div class="row">
        <h2>Create New Product</h2>
    </div>
    @*FormTagHelper*@
    <form asp-controller="Product" asp-action="Create" method="post" class="row g-3" enctype="multipart/form-data">
        <div asp-validation-summary="All"></div>
        <div class="col-md-6">
       @*     <label for="Name" class="form-label">Name</label>
            <input type="text" class="form-control" id="Name" name="Name">*@
            <label asp-for="Name"  for="Name" class="form-label">Name</label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="form-text text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Description" class="form-label">Description</label>
            <input asp-for="Description" type="text" class="form-control">
            <span asp-validation-for="Description" class="form-text text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Price" class="form-label">Price</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control">
            <span asp-validation-for="Price" class="form-text text-danger"></span>
         </div>
@*        <div class="col-md-6">
            <label asp-for="ImagePath" class="form-label">Image Path URL</label>
            <input asp-for="ImagePath" type="text" class="form-control" >
            <span asp-validation-for="ImagePath" class="form-text text-danger"></span>
        </div>*@

        <div class="col-md-6">
            <label asp-for="Image" class="form-label">Choose Image File</label>
            <input asp-for="Image" type="file" class="form-control" placeholder="Choose Image File">
            <span asp-validation-for="Image" class="form-text text-danger"></span>
        </div>
         <div class="col-md-6">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" asp-items="@ViewBag.ListCategory" class="form-select">
               
            </select>
            <span asp-validation-for="CategoryId" class="form-text text-danger"></span>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>

</div>

            @*HTMLTagHelper*@